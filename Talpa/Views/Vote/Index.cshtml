@model List<ActivityDateViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="h-full py-10 px-2 md:px-20">
    <div class="w-full shadow-lg p-10">
        <div class="w-full">
            <div class="flex flex-col gap-4">
                @foreach (ActivityDateViewModel activityDate in Model)
                {
                    <div class="flex gap-4 md:gap-40 shadow-lg p-4 justify-center w-full rounded-md">

                        <div class="flex flex-col justify-center"> 
                            <div class="text-lg md:flex gap-1">
                                <p>@activityDate.StartDate.ToString("yyyy-MM-dd HH:mm:ss") -</p>
                                <p>@activityDate.EndDate.ToString("yyyy-MM-dd HH:mm:ss")</p>
                            </div>
                        </div>

                        <div class="flex flex-col justify-center">
                            <input value="false" type="checkbox" class="checkbox h-10 w-10 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5">
                        </div>
                    </div>
                }       
                
                <div class="px-10 flex gap-4">
                    <div class="w-full flex justify-end">
                        <a asp-controller="Activity" asp-action="Index" class="bg-white border border-[#5236AB] w-full hover:bg-gray-100 text-center flex flex-col justify-center font-bold rounded py-2 text-[#5236AB]">Annuleren</a>
                    </div>
                    <div class="w-full flex justify-end">
                        <input type="submit" value="Vote" class="cursor-pointer bg-[#5236AB] w-full hover:bg-[#300FA8] text-white font-bold py-2 rounded" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>